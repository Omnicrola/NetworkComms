<Window x:Class="NetworkClient.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:networking="clr-namespace:NetworkClient.Networking"
        xmlns:ui="clr-namespace:NetworkClient.Ui"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance ui:MainWindowViewModel}"
        Title="Client" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <ui:SelectedUserPanel Margin="10" 
                              SelectedPerson="{Binding ElementName=PeopleTable, Path=SelectedPerson}"/>
        <ui:PeopleTable Grid.Row="1" 
                        Margin="10" 
                        x:Name="PeopleTable" 
                        PeopleSource="{Binding People}" />
    </Grid>
</Window>