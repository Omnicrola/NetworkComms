<UserControl x:Class="NetworkClient.Ui.SelectedUserPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NetworkClient.Ui"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:PersonViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="RootElement">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Margin="5">First Name:</Label>
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding FirstName}"/>
        <Label Grid.Row="1" Grid.Column="0" Margin="5">Last Name:</Label>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding LastName}"/>
    </Grid>
</UserControl>