<UserControl x:Class="NetworkClient.Ui.PeopleTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NetworkClient.Ui"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:PeopleTable}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="RootElement">
        <DataGrid ItemsSource="{Binding People}" SelectedItem="{Binding SelectedPerson}"/>
    </Grid>
</UserControl>